#          01234567890123456789212345
letters = "abcdefghijklmnopqrstuvwxyz"

backwards = letters[::-1] #If written like this [25:0:-1] then the start value (a) will be omitted. When going backward the start value must be greater than the stop value.
print(backwards)

# create a slice that produces the characters qpo
print(letters[16:13:-1])

# slice the string to produce edcba
print(letters[4::-1])

# slice the string to produce the last 8 characters, in reverse order
print(letters[:-9:-1])

print(letters[-4:])# Last four letters. Whenever you see a slice with a negative start value and defaults for the stop and step, that just returns the end of the sequence.
print(letters[-1:])# Last letter
print(letters[:1]) # First letter
print(letters[0])  # First Letter

